{% extends 'base_index.html.twig' %}

{% block head %}
	{# {{ parent() }} #}
		<link rel="stylesheet" href="{{ asset("ace_master/assets/css/jquery-ui.custom.min.css") }}"/>
		<link rel="stylesheet" href="{{ asset("ace_master/assets/css/chosen.min.css") }}"/>
		<link rel="stylesheet" href="{{ asset("ace_master/assets/css/bootstrap-datepicker3.min.css") }}"/>
		<link rel="stylesheet" href="{{ asset("ace_master/assets/css/bootstrap-timepicker.min.css") }}"/>
		<link rel="stylesheet" href="{{ asset("ace_master/assets/css/daterangepicker.min.css") }}"/>
		<link rel="stylesheet" href="{{ asset("ace_master/assets/css/bootstrap-datetimepicker.min.css") }}"/>
		<link rel="stylesheet" href="{{ asset("ace_master/assets/css/bootstrap-colorpicker.min.css") }}"/>
{% endblock %}

{% block title %}Dodaj zawodnika{% endblock %}

{% block body %}
<div class="col-xs-12">
	<div class="widget-box">
		{# nagłówek formularza  #}
		<div class="widget-header">
			<h4 class="widget-title">Dodawanie zawodnika</h4>
		</div>
		{# koniec nagłówka formularza  #}

	<div class="form-horizontal" role="form">
		{# {{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}} #}
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
		{{ form_errors(form) }}
		
		<div class="form-group" style="margin-top:15px;">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
				{{form_label(form.imie)}}
			</label>
			<div class="col-xs-10 col-sm-5">
				{{form_widget(form.imie)}}
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
				{{form_label(form.nazwisko)}}
			</label>
			<div class="col-xs-10 col-sm-5">
				{{form_widget(form.nazwisko)}}
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
				{{form_label(form.dataUrodzenia)}}
			</label>
			<div class="col-xs-10 col-sm-1">

				{{form_widget(form.dataUrodzenia)}}
			</div>
		</div>

		<div >
			<div class="alert alert-info text-center">
				<button type="button" class="close" data-dismiss="alert">
					<i class="ace-icon fa fa-times"></i>
				</button>
				<strong>Uwaga!!! </strong>Pozostałe informacje na należy uzupełnić w edycji profilu zawodnika.
			</div>
			<span class="help-block "></span>

		</div>


		

		<div class="clearfix form-actions center no-margin-bottom">
				{{form_widget(form.submit)}}
				<button class="btn btn-warning" type="reset">
					<i class="ace-icon fa fa-undo bigger-110"></i>
					Reset
				</button>
		</div>
		{{ form_rest(form)}}
		{{ form_end(form)}}

				{# <a href="{{ url("zawodnik_index") }}">
					<button class="btn btn-danger">
						<i class="ace-icon fa fa-step-backward bigger-110"></i>Powrót
					</button>
				</a> #}

	</div>
	</div>
</div>



{% endblock %}

{% block page_scripts %}
	{{ parent() }}
	<script src="{{ asset("ace_master/assets/js/jquery-ui.custom.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/jquery.ui.touch-punch.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/chosen.jquery.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/spinbox.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/bootstrap-datepicker.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/bootstrap-timepicker.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/moment.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/daterangepicker.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/bootstrap-datetimepicker.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/bootstrap-colorpicker.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/jquery.knob.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/autosize.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/jquery.inputlimiter.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/jquery.maskedinput.min.js") }}"></script>
	<script src="{{ asset("ace_master/assets/js/bootstrap-tag.min.js") }}"></script>
{% endblock %}

{% block inline_script %}
	<script type="text/javascript">
	jQuery(function($) {
		//datepicker plugin
		//link
			$('.date-picker').datepicker({
				autoclose: true,
				todayHighlight: true
			})
			//show datepicker when clicking on the icon
			.next().on(ace.click_event, function(){
				$(this).prev().focus();
			});
});	
</script>

{% endblock %}
