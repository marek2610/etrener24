{% extends 'base_index.html.twig' %}

{% block title %}Kontuzjowany zawodnik{% endblock %}

{% block body %}
<h3></h3>

<div class="col-xs-12">
	<div class="">

		<div id="user-profile-1" class="user-profile row">
			
			{# lewa strona ze zdjęciem #}
			<div class="col-xs-12 col-sm-3 center">
			
				<div>
					<span class="profile-picture">
						<img id="avatar" class="editable img-responsive editable-click editable-empty" alt="Alex's Avatar" src="{{ asset("ace_master/assets/images/avatars/profile-pic.jpg") }}">
					</span>

					<div class="space-4"></div>

					<div class="width-80 label label-info label-xlg arrowed-in arrowed-in-right">
						<div class="inline position-relative">
							<span class="white">{{ zawodnik.nazwisko}}
								{{ zawodnik.imie}}</span>
						</div>
					</div>
				</div>

				<div class="space-6"></div>

				<div class="profile-contact-info">
					<div class="profile-contact-links align-left">

						<a href="#" class="btn btn-link">
							<i class="ace-icon fa fa-envelope bigger-120 pink"></i>
							Wyślij wiadomość
						</a>

						<a href="#" class="btn btn-link">
							<i class="ace-icon fa fa-globe bigger-125 blue"></i>
							www.alexdoe.com
						</a>
					</div>

					<div class="space-6"></div>

					<div class="profile-social-links align-center">
						<a href="#" class="tooltip-info" title="" data-original-title="Visit my Facebook">
							<i class="middle ace-icon fa fa-facebook-square fa-2x blue"></i>
						</a>

						<a href="#" class="tooltip-info" title="" data-original-title="Visit my Twitter">
							<i class="middle ace-icon fa fa-twitter-square fa-2x light-blue"></i>
						</a>

						<a href="#" class="tooltip-error" title="" data-original-title="Visit my Pinterest">
							<i class="middle ace-icon fa fa-pinterest-square fa-2x red"></i>
						</a>
					</div>
				</div>

				<div>
					<div class="space visible-xs"></div>
					<h4 class="header blue lighter less-margin">Wyślij wiadomość do
						{{ zawodnik.nazwisko}}
						{{ zawodnik.imie}}</h4>

					<div class="space-6"></div>

					<form>
						<fieldset>
							<textarea class="width-100" resize="none" placeholder="Type something…"></textarea>
						</fieldset>

						<div class="hr hr-dotted"></div>

						<div class="clearfix">

							<button class="pull-right btn btn-sm btn-primary btn-white btn-round" type="button">
								Wyślij
								<i class="ace-icon fa fa-arrow-right icon-on-right bigger-110"></i>
							</button>
						</div>
					</form>
				</div>

				<div class="clearfix"></div>
			</div>{# lewa strona ze zdjęciem - koniec#}
	
			{# prawa strona #}
			<div class="col-xs-12 col-sm-9" style="margin-bottom: 15px;">
				{# dane statystyczne #}
				<div class="center">
					<span class="btn btn-app btn-sm btn-light no-hover">
						<span class="line-height-1 bigger-170 blue">
							1,411
						</span>

						<br>
						<span class="line-height-1 smaller-90">
							Minut
						</span>
					</span>

					<span class="btn btn-app btn-sm btn-yellow no-hover">
						<span class="line-height-1 bigger-170">
							32
						</span>

						<br>
						<span class="line-height-1 smaller-90">
							Meczy
						</span>
					</span>

					<span class="btn btn-app btn-sm btn-pink no-hover">
						<span class="line-height-1 bigger-170">
							4
						</span>

						<br>
						<span class="line-height-1 smaller-90">
							Bramek
						</span>
					</span>

					<span class="btn btn-app btn-sm btn-grey no-hover">
						<span class="line-height-1 bigger-170">
							{{ zawodnik.urazy | length }}
						</span>

						<br>
						<span class="line-height-1 smaller-90">
							Kontuzji
						</span>
					</span>

					<span class="btn btn-app btn-sm btn-success no-hover">
						<span class="line-height-1 bigger-170">
							7
						</span>

						<br>
						<span class="line-height-1 smaller-90">
							Albums
						</span>
					</span>

					<span class="btn btn-app btn-sm btn-primary no-hover">
						<span class="line-height-1 bigger-170">
							55
						</span>

						<br>
						<span class="line-height-1 smaller-90">
							Contacts
						</span>
					</span>

					<span class="btn btn-app btn-sm btn-primary no-hover">
						<span class="line-height-1 bigger-170">
							55
						</span>

						<br>
						<span class="line-height-1 smaller-90">
							Contacts
						</span>
					</span>

					<span class="btn btn-app btn-sm btn-primary no-hover">
						<span class="line-height-1 bigger-170">
							55
						</span>

						<br>
						<span class="line-height-1 smaller-90">
							Contacts
						</span>
					</span>

				</div> {# dane ststystyczne - koniec#}
			</div>


			<div class="col-xs-12 col-sm-9">

				{# formularz dodawania kontuzji #}
				<div class="form-horizontal" role="form">
					{{form_start(kontuzjaFormularz, {'attr': {'novalidate': 'novalidate'}}) }}
					{# {{ form_start(kontuzjaFormularz)}} #}
					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
							{{form_label(kontuzjaFormularz.rozpoznanie)}}
						</label>
						<div class="col-xs-10 col-sm-5">
							{{form_widget(kontuzjaFormularz.rozpoznanie)}}
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
							{{form_label(kontuzjaFormularz.zalecenia)}}
						</label>
						<div class="col-xs-10 col-sm-5">
							{{form_widget(kontuzjaFormularz.zalecenia)}}
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
							{{form_label(kontuzjaFormularz.rehabilitacja)}}
						</label>
						<div class="col-xs-10 col-sm-5">
							{{form_widget(kontuzjaFormularz.rehabilitacja)}}
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
							{{form_label(kontuzjaFormularz.dataKontuzji)}}
						</label>
						<div class="col-xs-10 col-sm-2">

							{{form_widget(kontuzjaFormularz.dataKontuzji)}}
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
							{{form_label(kontuzjaFormularz.uwagi)}}
						</label>
						<div class="col-xs-10 col-sm-5">
							{{form_widget(kontuzjaFormularz.uwagi, {'attr': {'novalidate': 'novalidate'}})}}
						</div>
					</div>

					<div class="clearfix form-actions">
						<div class="col-md-offset-3 col-md-9">
							{{form_widget(kontuzjaFormularz.submit)}}
							<button class="btn btn-warning" type="reset">
								<i class="ace-icon fa fa-undo bigger-110"></i>
								Reset
							</button>
							{{ form_rest(kontuzjaFormularz) }}

							
						</div>
					</div>
				</div>{# formularz dodawania kontuzji - koniec #}
				{{ form_end(kontuzjaFormularz)}}
				
							<a href="{{ url("urazy_index") }}" style="margin-bottom = 5px">
								<button class="btn btn-danger">
									<i class="ace-icon fa fa-step-backward bigger-110"></i>Powrót
								</button>
							</a>

		
				{# zestawienei kontuzji #}
				<table class="table table-bordered table-striped">
					<thead class="thin-border-bottom">
						<tr>
							<th>
								#
							</th>

							<th class="col-xs-2">
								Rozpoznanie
							</th>

							<th class="col-xs-2">
								Zalecenia
							</th>

							<th class="col-xs-2">
								Rehabilitacja
							</th>

							<th>
								Data kontuzji
							</th>

							<th>
								Zdolny do gry
							</th>

							<th class="col-xs-2">
								Uwagi
							</th>
						</tr>
					</thead>

					<tbody>
						{% for uraz in zawodnik.urazy|reverse %}
							<tr>
								<td>
									{{loop.revindex}}
								</td>

								<td>
									{{uraz.rozpoznanie}}
								</td>

								<td class="hidden-480">
									{{uraz.zalecenia}}
								</td>

								<td class="hidden-480">
									{{uraz.rehabilitacja}}
								</td>

								<td
									class="hidden-480">{# {{uraz.dataKontuzji}} #}
								</td>

								<td class="hidden-480">
									2020-02-02 z ręki
								</td>

								<td class="hidden-480">
									{{uraz.uwagi}}
								</td>
							</tr>

						</tbody>
					{% endfor %}
				</table>{# zestawienei kontuzji - koniec#}
									
			</div>

			<div class="clearfix"></div>

		</div>
	</div>
</div>

{% endblock %}
