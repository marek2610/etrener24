									<i class="ace-icon fa fa-pencil bigger-120"></i>
									Info
								</a>

								<a class="btn btn-xs btn-success" href="{{ url("zawodnik_edytuj", {"id": zawodnik.id}) }}">
									<i class="ace-icon fa fa-pencil bigger-120"></i>
									Edytuj
								</a>

								<a class="btn btn-xs btn-danger" href="{{ url("urazy_details", {"id": zawodnik.id}) }}">
									<i class="ace-icon fa fa-wheelchair  bigger-120"></i>
