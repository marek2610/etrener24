{% extends "base_index.html.twig" %}

{% block title %}Dodawanie drużyny{% endblock %}

{% block body %}
{{ form_start(form) }}
<div class="col-xs-12">
<div class="widget-box">
		{# nagłówek formularza  #}
		<div class="widget-header">
			<h4 class="widget-title">Dodawanie drużyny</h4>
			
		</div>
	<div class="form-horizontal" role="form">

		<div class="form-group" style="margin-top:15px;">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
				Nazwa drużyny
			</label>
			<div class="col-xs-10 col-sm-5">
				{{ form_widget(form.nazwa) }}
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
				Nazwa skrócona
			</label>
			<div class="col-xs-10 col-sm-5">
				{{ form_widget(form.nazwaShort) }}
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
				Grupa wiekowa
			</label>
			<div class="col-xs-10 col-sm-5">
				{{ form_widget(form.grupaWiekowa) }}
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
				Opis
			</label>
			<div class="col-xs-10 col-sm-5">
				{{ form_widget(form.opis) }}
			</div>
		</div>

    <div class="form-group">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1">
				Trener
			</label>
			<div class="col-xs-10 col-sm-5">
        {{ form_widget(form.trener) }}
			</div>
		</div>

		<div class="clearfix form-actions no-margin-bottom">
			<div class="col-md-offset-3 col-md-9">
				
				<button class="btn btn-success" type="submit">
					<i class="ace-icon fa fa-plus bigger-110"></i>
					Dodaj
				</button>

				<a href="{{ url("team_index") }}">
					<button class="btn btn-danger">
						<i class="ace-icon fa fa-step-backward bigger-110"></i>Powrót
					</button>
				</a>
			</div>
		</div>
		{{ form_rest(form)}}
		{{ form_end(form)}}

</div>
	</div>
</div>
{% endblock %}
